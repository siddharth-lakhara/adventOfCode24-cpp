{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build_day",
            "type": "shell",
            "command": "g++",
            "args": [
                "-g",
                "${relativeFileDirname}.cpp",
                "-o",
                "day.out"
            ],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}/${relativeFileDirname}"
            }
        }
    ]
}